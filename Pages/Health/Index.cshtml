@page
@model DnsProxy.Pages.Health.IndexModel
@{
    Layout = "_Layout";
}

<h2 class="mb-3">Апстрим-проверка (chatgpt.com)</h2>

<div class="table-responsive">
<table class="table table-dark table-striped table-sm">
    <thead class="table-primary text-center small">
    <tr>
        <th>Сервер</th>
        <th>Протокол</th>
        <th>RCODE</th>
        <th>IP</th>
        <th>TTL</th>
        <th>мс</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Items)
        {
            <tr class="@(r.Ip == "-" ? "table-danger" : "")">
                <td>@r.Server</td>
                <td>@r.Proto</td>
                <td class="@(r.Rcode == "NOERROR" ? "text-success" : "text-danger")">@r.Rcode</td>
                <td>@r.Ip</td>
                <td class="text-center" title="осталось секунд">@r.Ttl</td>
                <td>@r.Ms</td>
            </tr>
        }
    </tbody>
</table>
</div>

<a class="btn btn-outline-light" href="">↻ проверить ещё раз</a>
