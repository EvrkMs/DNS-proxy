@page "{id?}"
@model DnsProxy.Pages.Servers.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";   // берётся Pages/Shared/_Layout.cshtml
}
<h2>@(Model.Item.Id==0?"Новый сервер":"Редактирование")</h2>

<form method="post" class="row g-3">
  <div class="col-md-8">
    <label asp-for="Item.Address" class="form-label"></label>
    <input asp-for="Item.Address" class="form-control"/>
  </div>

  <div class="col-md-2">
    <label asp-for="Item.Priority" class="form-label"></label>
    <input asp-for="Item.Priority" class="form-control"/>
  </div>
    <div class="col-md-8">
        <label asp-for="Item.StaticAddress" class="form-label"></label>
        <input asp-for="Item.StaticAddress" class="form-control" />
    </div>
    <select asp-for="Item.Protocol" class="form-select">
        @foreach (var p in Enum.GetValues<DnsProtocol>())
        {
            <option value="@p">@p</option>
        }
    </select>

  <button class="btn btn-success w-25">Сохранить</button>
  <a asp-page="Index" class="btn btn-secondary">Отмена</a>
</form>
