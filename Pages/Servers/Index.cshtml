@page
@model DnsProxy.Pages.Servers.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";   // берётся Pages/Shared/_Layout.cshtml
}
<h2>DNS-серверы</h2>
<a asp-page="Edit" class="btn btn-success mb-3">
    <i class="bi bi-plus-lg"></i> Добавить
</a>

<table class="table table-dark table-striped align-middle">
<thead>
    <tr>
        <th>Адрес/URL</th>
        <th>DoH</th>
        <th>WireFmt</th>
        <th>Приоритет</th>
        <th>

        </th>
        </tr>
</thead>
<tbody>
@foreach (var s in Model.Items)
{
  <tr>
    <td>@s.Address</td>
    <td>@s.Protocol</td>
    <td>@s.Priority</td>
    <td class="text-end">
        <a asp-page="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-primary me-1">
            <i class="bi bi-pencil-square"></i>
        </a>
        <form method="post" asp-page-handler="Delete" asp-route-id="@s.Id"
              class="d-inline" onsubmit="return confirm('Удалить?');">
            <button class="btn btn-sm btn-danger">
                <i class="bi bi-trash"></i>
            </button>
        </form>
    </td>
  </tr>
}
</tbody>
</table>
